# }

# run_watch VPN {
#         pidfile = "/var/run/vpnc/pid"
# }

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}
