#!/bin/zsh

local img=/tmp/i3lock.png
local light=$(xbacklight -get)
local curdpms=$(xset q | grep DPMS -A1 | grep Standby | awk '{print $2}')

xset dpms 180 &
xbacklight -set 5 -time 1000 &
scrot $img
mogrify -blur 0x10 -scale 10% -scale 1000%  $img
i3lock -i $img -f -I 10 -b -n
xset dpms $curdpms
rm $img
xbacklight -set $light -time 500
